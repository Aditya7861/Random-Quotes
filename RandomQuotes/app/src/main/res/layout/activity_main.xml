<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_back"
    tools:context="com.example.aditya.randomquote.MainActivity">

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:weightSum="1">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/first_layout"
        android:layout_marginTop="62dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout">


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_share"
        android:layout_above="@+id/next_quote_floatingActionButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/next_quote_floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        app:srcCompat="@drawable/new_next"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/floatingActionButton"
        android:layout_marginBottom="19dp" />

    <TextView
        android:id="@+id/Quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:fontFamily="Dancing"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Loading..."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        tools:text="Quote"
        android:layout_below="@+id/first_layout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/Author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="120dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:fontFamily="Consolos"
        android:padding="10dp"
        android:text=" "
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/Green"
        android:textSize="30dp"
        tools:text="Author"
        android:layout_below="@+id/Quote"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />


</RelativeLayout>